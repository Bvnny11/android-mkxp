<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/gameLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.joiplay.joiplay.rpgm.JoystickButton
            android:id="@+id/joystickBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:clickable="true"
            android:layout_gravity="top|end"
            android:scaleType="fitCenter"
            android:layout_margin="10dp"
            android:background="@drawable/circle_button"
            android:src="@drawable/joystick"/>
    <RelativeLayout
            android:id="@+id/joystickLay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible">
        <LinearLayout
                android:id="@+id/funcLay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
        >
            <ImageButton
                    android:id="@+id/closeBtn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circle_button"
                    android:src="@drawable/close"
                    android:layout_marginEnd="10dp"
                    tools:ignore="ContentDescription"/>
            <ImageButton
                    android:id="@+id/rotateBtn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circle_button"
                    android:src="@drawable/rotation"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    tools:ignore="ContentDescription"/>
            <ImageButton
                    android:id="@+id/keyboardBtn"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/circle_button"
                    android:src="@drawable/keyboard"
                    android:layout_marginStart="10dp"
                    tools:ignore="ContentDescription"/>

        </LinearLayout>

        <RelativeLayout
                android:id="@+id/joystickArrowLay"
                android:layout_width="148dp"
                android:layout_height="148dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_margin="20dp"
                android:focusable="true">
            <ImageButton
                    android:id="@+id/upBtn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:clickable="false"
                    android:src="@drawable/arrow_up"
                    android:background="@drawable/circle_button"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"

                    tools:ignore="ContentDescription"/>
            <ImageButton
                    android:id="@+id/downBtn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:clickable="false"
                    android:src="@drawable/arrow_down"
                    android:background="@drawable/circle_button"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"

                    tools:ignore="ContentDescription"/>
            <ImageButton
                    android:id="@+id/leftBtn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:clickable="false"
                    android:src="@drawable/arrow_left"
                    android:background="@drawable/circle_button"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"

                    tools:ignore="ContentDescription"/>
            <ImageButton
                    android:id="@+id/rightBtn"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:clickable="false"
                    android:src="@drawable/arrow_right"
                    android:background="@drawable/circle_button"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    tools:ignore="ContentDescription"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/actionLay"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="20dp">
            <LinearLayout
                    android:id="@+id/tLay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    >
                <Button
                        android:id="@+id/aBtn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_button"
                        android:text="Enter"
                        android:textSize="8sp"
                        android:textColor="@color/colorText"
                        android:layout_margin="5dp"
                        android:focusable="false"
                        />
                <Button
                        android:id="@+id/bBtn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_button"
                        android:text="Esc"
                        android:textSize="8sp"
                        android:textColor="@color/colorText"
                        android:layout_margin="5dp"
                        android:focusable="false"
                        />

            </LinearLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">
                <Button
                        android:id="@+id/cBtn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_button"
                        android:text="C"
                        android:textSize="8sp"
                        android:textColor="@color/colorText"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dp"
                        android:focusable="false"
                        />
                <Button
                        android:id="@+id/xBtn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_button"
                        android:layout_margin="5dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="X"
                        android:textSize="8sp"
                        android:textColor="@color/colorText"
                        android:focusable="false"
                        />
            </RelativeLayout>
            <LinearLayout
                    android:id="@+id/bLay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    >
                <Button
                        android:id="@+id/yBtn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_button"
                        android:layout_margin="5dp"
                        android:text="Y"
                        android:textSize="8sp"
                        android:textColor="@color/colorText"
                        android:focusable="false"
                        />
                <Button
                        android:id="@+id/zBtn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_button"
                        android:layout_margin="5dp"
                        android:text="Z"
                        android:textSize="8sp"
                        android:textColor="@color/colorText"
                        android:focusable="false"
                        />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>
